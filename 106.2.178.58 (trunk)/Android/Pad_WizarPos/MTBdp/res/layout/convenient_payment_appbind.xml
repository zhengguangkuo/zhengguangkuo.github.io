<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffcfcfcf" >

      <RelativeLayout
          android:id="@+id/app_relative"
          android:layout_width="fill_parent"
          android:layout_height="60dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/list_bt_gery"
          android:gravity="center" >

          <TextView
              android:id="@+id/app_name" 
              android:layout_height="wrap_content"
              android:layout_width="150dp"
              android:text="饭统网"
              android:textSize="20dp"
              android:textColor="#ff000000"
              android:layout_marginLeft="10dip"
              android:layout_centerVertical="true"/>

         <ImageView
              android:id="@+id/app_details_icon" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/list_bt_down"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dip"
              android:layout_centerVertical="true"
              android:visibility="invisible"/>

          <ImageView

              android:id="@+id/app_bind_flag"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dip"
              android:layout_toLeftOf="@id/app_details_icon"

              android:src="@drawable/checkbox_icon_u_h"
              android:visibility="visible" />

          <TextView
              android:id="@+id/tv_bind_text" 
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_toRightOf="@id/app_name"
              android:layout_alignBaseline="@id/app_name"
              android:layout_marginLeft="45dp"
              android:visibility="visible"/>
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/app_details_linear" 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="#ffffffff"
          android:layout_marginLeft="11dp"
          android:layout_marginRight="11dp"
          android:orientation="vertical"
          android:visibility="gone">
          <TextView 
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:id="@+id/app_details_text"
              android:padding="10dip"
              android:textColor="#666666"
              android:text="        这里是应用的详情介绍,详情介绍，详情介绍，详情介绍，详情介绍，详情介绍......"
              />
      </LinearLayout>
</LinearLayout>